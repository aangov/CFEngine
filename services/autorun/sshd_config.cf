bundle agent sshd_config {

    files:
     "/etc/ssh/sshd_config"
      create => "true",
      edit_line => edit_sshd_config("${sshd_config.sshd_config}");

}

bundle edit_line edit_sshd_config(sshd_config) {

	  insert_lines:
	        "PermitRootLogin no" location => auth;
}

body location auth {

	    select_line_matching => "# Authentication:.*";
	        before_after => "after";
}


